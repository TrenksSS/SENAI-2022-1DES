				System.out.println("Adeus");
				break;
			default:
				System.out.println("Opção invalida");
				break;
			}
		}
	}

	private static void cadastrarAluno() {
		System.out.println("ID.\t Nome.\tIdade.");
		for(int i = 0; i < valor; i++) {
			System.out.println(alunos[i].formatAluno());
	}

}
