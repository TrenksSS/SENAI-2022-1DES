		scan = new Scanner(System.in);
		int menu = 0;
		while (menu != 8) {
			System.out.print(
					"1.Cadastrar alunos\n2.Cadastrar notas\n3.Listar todos alunos\n4.Listar todas as notas\n5.Buscar aluno\n6.Listar alunos aprovados\n7.Listar alunos reprovados\n8.Sair");
			menu = scan.nextInt();
			switch (menu) {
			case 1:
				cadastrarAluno();
				break;
			case 2:

				break;
			case 3:

				break;
			case 4:

				break;
			case 5:

				break;
			case 6:

				break;
			case 7:

				break;
