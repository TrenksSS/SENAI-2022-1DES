package models;

import java.text.DecimalFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Currency;
import java.util.Date;
import java.util.Iterator;
import java.util.Locale;
import java.util.Objects;

public class Orcamento {

	private int id;
	private Date data;
	private String fornecedor;
	private String produto;
	private double valor;

	private final Locale BRASIL = new Locale("pt", "BR");
	private SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
	private DecimalFormat df = new DecimalFormat("#.00");

	public Orcamento(int id, String data, String fornrcrdor, String produto) {
	}
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public Date getData() {
		return data;
	}

	public void setData(Date data) {
		this.data = data;
	}


	public String getCustoHora() {
		return fornecedor;
	}

	public void setCustoHora(double custoHora) {
		this.fornecedor = fornecedor;
	}

	public String getTempoGasto() {
		return produto;
	}

	public void setTempoGasto(double tempoGasto) {
		this.produto = produto;
	}

	public SimpleDateFormat getSdf() {
		return sdf;
	}

	public void setSdf(SimpleDateFormat sdf) {
		this.sdf = sdf;
	}

	public DecimalFormat getDf() {
		return df;
	}

	public void setDf(DecimalFormat df) {
		this.df = df;
	}

	public Locale getBRASIL() {
		return BRASIL;
	}

	public String toString() {
		return id + "\t" + sdf.format(data) + "\t" + fornecedor
				+ "\t" + produto + "\n";
	}

	public String toCSV() {
		return id + ";" + sdf.format(data) + ";"  + fornecedor + ";" + produto + "\r\n";
	}

}


