package models;

import java.text.DecimalFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Currency;
import java.util.Date;
import java.util.Iterator;
import java.util.Locale;
import java.util.Objects;

public class Orcamento {

	private int id;
	private Date data;
	private double custoHora;
	private double tempoGasto;

	private final Locale BRASIL = new Locale("pt", "BR");
	private SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
	private DecimalFormat df = new DecimalFormat("#.00");

	public Orcamento(int id, String data, double custoHora, double tempoGasto) {
		this.id = id;
		try {
			this.data = sdf.parse(data);
		} catch (ParseException e) {
			System.out.println(e.toString());
		}
		this.custoHora = custoHora;
		this.tempoGasto = tempoGasto;
	}

	public Orcamento(int id) {
		this.id = id;
	}

	public Orcamento(String linha) {
		df.setCurrency(Currency.getInstance(BRASIL));

		String[] temp = linha.split(";");

		this.id = Integer.parseInt(temp[0]);
		try {
			this.data = sdf.parse(temp[1]);
		} catch (ParseException e) {
			System.out.println(e.toString());
		}
		this.custoHora = Double.parseDouble(temp[2].replace(",", "."));
		this.tempoGasto = Double.parseDouble(temp[3]);

	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Orcamento other = (Orcamento) obj;
		return Objects.equals(BRASIL, other.BRASIL)
				&& Double.doubleToLongBits(custoHora) == Double.doubleToLongBits(other.custoHora)
				&& Objects.equals(data, other.data) && Objects.equals(df, other.df)
				&& Double.doubleToLongBits(tempoGasto) == Double.doubleToLongBits(other.tempoGasto);
	}

	public double getTotal() {
		return this.custoHora * this.tempoGasto;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public Date getData() {
		return data;
	}

	public void setData(Date data) {
		this.data = data;
	}


	public double getCustoHora() {
		return custoHora;
	}

	public void setCustoHora(double custoHora) {
		this.custoHora = custoHora;
	}

	public double getTempoGasto() {
		return tempoGasto;
	}

	public void setTempoGasto(double tempoGasto) {
		this.tempoGasto = tempoGasto;
	}

	public SimpleDateFormat getSdf() {
		return sdf;
	}

	public void setSdf(SimpleDateFormat sdf) {
		this.sdf = sdf;
	}

	public DecimalFormat getDf() {
		return df;
	}

	public void setDf(DecimalFormat df) {
		this.df = df;
	}

	public Locale getBRASIL() {
		return BRASIL;
	}

	public String toString() {
		return id + "\t" + sdf.format(data) + "\t" + custoHora
				+ "\t" + tempoGasto + "\n";
	}

	public String toCSV() {
		return id + ";" + sdf.format(data) + ";"  + custoHora + ";" + tempoGasto + "\r\n";
	}
}
